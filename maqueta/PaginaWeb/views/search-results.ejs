<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="./images/logo-mercado-liebre.jpg" />

	<title> Mercado Liebre Argentina</title>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/app.css">
</head>

<body>
	<!-- Header -->
	<%- include('./partials/header')%>
	<!-- /Header -->

	
	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de búsqueda</h2>
			</div>
			<%   for (let i = 0; i < relojes.length; i++) { %>
                <% const reloj = relojes[i]; %>
                <div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
					    <a href="/product/detail<%=relojes[i].id%>">
						<article class="p-3 text-center">
                              <h2 class="hipervinculo"> <%=relojes[i].titulo%> </h2>
							
							<figure class="product-box_image">
								<img src="/public/images/products/<%= relojes[i].image%>" alt="">
							</figure>
							<article class="product-box_data">
								<p> Descripción: <%= reloj[i].description %> </p>
								
							</article>
						</article>
						</a>
					</section>
				</div>
            <% } %>
		
			
		</div>
	</div>
	


	<!-- footer -->
	<%- include('./partials/footer')%>
	<!-- /footer -->
	
</body>	

</html>