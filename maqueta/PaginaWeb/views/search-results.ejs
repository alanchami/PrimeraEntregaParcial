<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="/images/logo-mercado-liebre.jpg" />

	<title> Mercado Liebre Argentina</title>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/app.css">
</head>

<body>
	<!-- Header -->
	<%- include('./partials/header')%>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<% if (relojes.length == 0){%>
					<h2 class="mafi"> No hay resultados para su criterio de b√∫squeda </h2>
					<% } else { %>
				<h2 class="products-title">Resultados de la busqueda</h2>
				<% } %>
</div>

			<% for(let i=0; i<relojes.length; i++) {%>

					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
						<a href="/product/detail/ <%= relojes[i].id%>">
						<figure class="product-box_image">
							<img src= "/<%= relojes[i].image %>">
						</figure>
						<article class="product-box_data">
						<h2 class="name1"> <%= relojes[i].name %></h2>
						<p><%= relojes[i].name %> <br>
						 <br>
						<%= relojes[i].descripcion %>
					  </p>
					<p>Comentarios: 12</p>
					</article>
					</a>
					</section>
					</div>
				
     
    <% } %>
		
		</div>
	</div>
	
              
				
			
		</div>
	</div>


	<!-- footer -->
	<%- include('./partials/footer')%>
	<!-- /footer -->
	
</body>	

</html>