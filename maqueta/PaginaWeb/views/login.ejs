<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="./images/logo-mercado-liebre.jpg" />

	<title> <%= title %> </title>
	
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="./stylesheets/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="./stylesheets/app.css">
</head>

<body>
	<!-- Header -->
	<%- include('./partials/header')%>
	<!-- /Header -->

	<!-- Novedades -->
	<body>
		<section class="user">
			<div class="user_options-container">
			  <div class="user_options-text">
				<div class="user_options-unregistered">
				  <h2 class="user_unregistered-title">Don't have an account?</h2>
				  <p class="user_unregistered-text">Registrate aqui</p>
				  <form action="register" ><button   class="user_unregistered-signup" id="signup-button">Sign up</button></form>
				  
				</div>
		  
				
			  
			  <div class="user_options-forms" id="user_options-forms">
				<div class="user_forms-login">
				  <h2 class="forms_title">Login</h2>
				  <form class="forms_form" action="login" method="POST" >
					<fieldset class="forms_fieldset">
					  <div class="forms_field" >
						<input type="email" name="email" placeholder="Email" class="forms_field-input"  /> <!--Incluir "required autofocus" para que sea obligatorio el campo-->
					  </div>
					  <div class="forms_field">
						<input type="password" placeholder="Password" class="forms_field-input"  /> <!--incluir el required en el final para que sea obligatorio el campo-->
					  </div>
					</fieldset>
					<div class="forms_buttons">
						<p>
							<input type="checkbox" name="rememberme" value="ok">
							Recordame
						</p>
					  <button type="button" class="forms_buttons-forgot">Forgot password?</button>
					  <button class="user_unregistered-signup" id="signup-button">Log In</button>
					</div>
				  </form>
				</div>
				<div class="user_forms-signup">
				  <h2 class="forms_title">Sign Up</h2>
				  <form class="forms_form">
					<fieldset class="forms_fieldset">
					  <div class="forms_field">
						<input type="text" placeholder="Full Name" class="forms_field-input" required />
					  </div>
					  <div class="forms_field">
						<input type="email" placeholder="Email" class="forms_field-input" required />
					  </div>
					  <div class="forms_field">
						<input type="password" placeholder="Password" class="forms_field-input" required />
					  </div>
					</fieldset>
					<div class="forms_buttons">
					  <input type="submit" value="Sign up" class="forms_buttons-action">
					</div>
				  </form>
				</div>
			  </div>
			</div>
		  </section>
		  
	  </body>
			
			
			
		
		
			  
			  
			
		


	<!-- footer -->
	<%- include('./partials/footer')%>
	<!-- /footer -->
	<!--<script src="/PrimeraEntregaParcial/maqueta/PaginaWeb/public/javascripts/register.js"></script>-->
</body>

</html>